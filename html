<div class="calculator">
  <input type="text" id="display" disabled>

  <div class="d-flex flex-wrap">
    <div class="d-flex flex-wrap" style="width: 60%;">
      <button class="btn btn-dark btn-calc" onclick="append('7')">7</button>
      <button class="btn btn-dark btn-calc" onclick="append('8')">8</button>
      <button class="btn btn-dark btn-calc" onclick="append('9')">9</button>

      <button class="btn btn-dark btn-calc" onclick="append('4')">4</button>
      <button class="btn btn-dark btn-calc" onclick="append('5')">5</button>
      <button class="btn btn-dark btn-calc" onclick="append('6')">6</button>

      <button class="btn btn-dark btn-calc" onclick="append('1')">1</button>
      <button class="btn btn-dark btn-calc" onclick="append('2')">2</button>
      <button class="btn btn-dark btn-calc" onclick="append('3')">3</button>

      <button class="btn btn-dark btn-calc" onclick="append('0')">0</button>
      <button class="btn btn-dark btn-calc" onclick="append('.')">.</button>
      <button class="btn btn-danger btn-calc" onclick="clearDisplay()">DEL</button>
    </div>

    <div class="d-flex flex-column" style="width: 25%;">
      <button class="btn btn-secondary btn-calc" onclick="append('/')">÷</button>
      <button class="btn btn-secondary btn-calc" onclick="append('*')">×</button>
      <button class="btn btn-secondary btn-calc" onclick="append('-')">−</button>
      <button class="btn btn-secondary btn-calc" onclick="append('+')">+</button>
      <button class="btn btn-primary btn-calc btn-equal" onclick="calculate()">=</button>
    </div>
  </div>
</div>

<script>
  let display = document.getElementById('display');

  function append(value) {
    display.value += value;
  }

  function clearDisplay() {
    display.value = '';
  }

  function calculate() {
    try {
      display.value = eval(display.value);
    } catch (e) {
      display.value = "Error";
    }
  }
</script>

